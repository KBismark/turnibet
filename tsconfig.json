{
    "exclude": ["node_modules", "dist", "__tests__"],
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,
        "declaration": false,
        "jsx": "react-native",
        "lib": ["es6","dom"],
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "module": "NodeNext",
        "target": "es5",
        "strict": false
    },
    "include": ["src", "types.d.ts"]
}
  